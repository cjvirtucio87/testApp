<h1>Customers#all</h1>
<table>
  <tr>
    <td>Name&nbsp;&nbsp;</td>
    <td>Email address</td>
  </tr>
  <tr><% @customers.each do |customer| %>
    <td><%= customer.name %></td>
    <td><%= customer.email %></td>
    <td><%= link_to 'edit', edit_customer_path(customer)%></td>
    <td><%= link_to 'destroy', customer_path(customer),
                               method: :delete,
                               data: { confirm: 'Are you sure?' } %></td>
  <% end %></tr>
</table>
<div><%= link_to 'Home', root_path, method: :get %></div>
<div><%= link_to 'Log out', logout_path, method: :delete %></div>