<%= form_for(customer) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= label_tag 'Name' %>
  <%= f.text_field :name %>
  <%= label_tag 'Email'%>
  <%= f.email_field :email %>
  <%= label_tag 'Password' %>
  <%= f.password_field :password %>
  <%= label_tag 'Confirm password' %>
  <%= f.password_field :password_confirmation %>
  <%= submit_tag 'Submit' %>
<% end %>