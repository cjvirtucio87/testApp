<h1>Customers#edit</h1>
<%= form_for @customer, url: {action: 'update'} do |f| %>
  <%= label_tag 'Name' %>
  <%= f.text_field :name %>
  <%= label_tag 'Email address' %>
  <%= f.email_field :email%>
  <%= label_tag 'Change password' %>
  <%= f.password_field :password %>
  <%= label_tag 'Confirm changed password' %>
  <%= f.password_field :password_confirmation %>
  <%= submit_tag 'Submit' %>
<% end %>
